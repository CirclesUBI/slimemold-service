{
    "env": {
        "es2021": true,
        "node": true,
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
    ],
    "rules": {
        "comma-style": [
            "error",
            "last",
        ],
        "indent": [
            "error",
            4,
        ],
        "linebreak-style": [
            "error",
            "unix",
        ],
        "no-console": "error",
        "quotes": [
            "error",
            "single",
        ],
        "semi": [
            "error",
            "always",
        ],
    }
}
